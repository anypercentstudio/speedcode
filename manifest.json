{
	"manifest_version": 3,
	"name": "SpeedCode",
	"version": "1.0",
	"description": "LeetCode problem tracker",
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": ["*://leetcode.com/*"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "SpeedCode"
	},
	"icons": {
		"16": "myicon.png",
		"48": "myicon.png",
		"128": "myicon.png"
	}
}
